{
  "name": "oasis-hub",
  "version": "0.1.0",
  "description": "MCP server exposing tools for calendar, GitHub, and Notion",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:unit": "vitest --run",
    "test:integration": "node integration-tests/terminal-integration.test.js",
    "test:all": "npm run test:unit && npm run test:integration",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@notionhq/client": "^2.2.15",
    "@octokit/rest": "^20.1.1",
    "ajv": "^8.12.0",
    "dotenv": "^16.4.5",
    "lru-cache": "^10.4.3"
  },
  "devDependencies": {
    "@types/node": "^20.14.10",
    "tsx": "^4.16.2",
    "typescript": "^5.5.3",
    "vitest": "^2.0.3"
  },
  "engines": {
    "node": ">=18"
  }
}
